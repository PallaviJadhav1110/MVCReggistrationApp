        @Scripts.Render("~/bundles/modernizr")
       
       

        
    </head>
    <body class="clsBody" style="overflow:hidden">
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    @*<a href="~/Images/fww_logo.png"></a>*@
                    <p class="site-title">&nbsp;&nbsp;&nbsp;&nbsp;<img alt="no img" src="@Url.Content("~/Images/fww_logo.png")" @*height="75" width="150"*@  /></p>
                </div>
                <div class="float-right">
                    @*<section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>*@
                    <nav>
                        <ul id="menu">
                            <li></li>
                            <li><a id="Dashboard" href="@Url.Action("DisplayDashBoard", "DashBoard")">DashBoard</a>
                                <a id="InsertDetails" href="@Url.Action("UserDetails", "Registration")">InsertData</a>
                            <a id="resorcedata" href="@Url.Action("SearchView", "Registration")">Resource Data</a></li>
                            <li> <a href="@Url.Action("Logout", "Registration")">Logout</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body" >
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        @*<footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                </div>
            </div>
        </footer>*@

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
