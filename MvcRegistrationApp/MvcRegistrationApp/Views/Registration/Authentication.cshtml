    -webkit-border-radius: 25px; /* Webkit/Safari/Chrome/etcetera */
}

    #body,.main-content,form  {
    
    min-height:100% !important}

    .Maindiv {
    margin:180px 40%;
    width:350px;
    }
    #body {
