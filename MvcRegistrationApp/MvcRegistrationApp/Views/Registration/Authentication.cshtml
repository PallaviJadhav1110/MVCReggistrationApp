@model DataLayer.AuthenticationClass
@{
    ViewBag.Title = "Authentication";
    Layout="~/Views/Shared/_emptyLayout.cshtml";
}


@using (Html.BeginForm("Authentication", "Registration", FormMethod.Post, new { @id="LoginForm"}))
{
    @*<div>
        @Html.ValidationMessageFor(x=>x.UserName)
        
    </div>*@
    <div class="Maindiv">
<table class="box" style="background-color:white">
     <tr >
        <td  colspan="3">
            <div class="title">Login</div>
       </td>
    </tr>
    <tr>
        <td>
            User Name :
        </td>
        <td>
            @Html.TextBoxFor(x => x.UserName, new { @id = "UserName",@name="UserName",@class = "required" })@Html.ValidationMessageFor(x=>x.UserName)
        </td>
        
    </tr>
     <tr>
        <td>
           Password :
        </td>
        <td>
            @Html.PasswordFor(x => x.Password, new { @id = "Password",@name="Password",@class = "required" })@Html.ValidationMessageFor(x=>x.Password)
        </td>
         
    </tr>
    <tr><td></td>
        <td class="submit">
            <input type="submit" value="Login"  />
        </td>
    </tr>
    <tr>
        @if (@TempData["message"] != null)
        {
            <td colspan="2" class="errmsg">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; @TempData["message"]</td>
        }
    </tr>
</table></div>
}
<style type="text/css">
    table td {
    padding:0 10px 0 10px;
    width:450px;
    }
    .errmsg {
        color:orangered;
    }
        table td input {
        width: 150px;
        }
    .title {
    font:bold 18px segoe UI;
    text-align:center;
    padding-left:40%;
    padding:20px 0 20px 0;
