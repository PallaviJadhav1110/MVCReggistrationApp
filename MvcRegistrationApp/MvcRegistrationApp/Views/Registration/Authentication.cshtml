    padding-bottom:20px;
    }
</style>
<script type="text/javascript">
    $(document).ready(function () {
        //alert("hi");
        $("#LoginForm").validate({
            rules: {
                UserName: {
                    required: true
                },
                Password:{
                    required: true
                }
            },
            message:{
                UserName: "Please enter Username",
                Password:"please Enter password"
        }
            
        });
    });
</script>